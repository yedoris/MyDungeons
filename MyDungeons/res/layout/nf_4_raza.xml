<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marron_claro"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nf_class"
        style="@style/cabecera"
        android:layout_margin="10dp"
        android:text=" Selecciona una raza"/>
 
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/celda_gris_claro" >
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/nf_elfo"
                style="@style/celda_raza_clase"
                android:src="@drawable/elfa" />

            <ImageView
                android:id="@+id/nf_enano"
                style="@style/celda_raza_clase"
                android:src="@drawable/enano" />

            <ImageView
                android:id="@+id/nf_gnomo"
                style="@style/celda_raza_clase"
                android:src="@drawable/gnomo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/nf_humano"
                style="@style/celda_raza_clase"
                android:src="@drawable/human" />

            <ImageView
                android:id="@+id/nf_mediano"
                style="@style/celda_raza_clase"
                android:src="@drawable/mediano" />

            <ImageView
                android:id="@+id/nf_semielfo"
                style="@style/celda_raza_clase"
                android:src="@drawable/semielfo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/nf_semiorco"
                style="@style/celda_raza_clase"
                android:src="@drawable/semiorco" />

            <ImageView style="@style/celda_raza_clase" />

            <ImageView style="@style/celda_raza_clase" />
        </TableRow>
    </TableLayout>

</LinearLayout>